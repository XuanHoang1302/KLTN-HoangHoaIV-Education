<% flash.each do |level, message| %>
  <% next if message.blank? %>
  <% next if level == 'timedout' %><%# this is a hack bc Devise, see https://github.com/heartcombo/devise#configuring-controllers %>

  <%= render(NotificationComponent.new(type: level, id: '')) do |component| %>
    <% component.message do %>
      <%= simple_format(message.presence&.to_s) %>
    <% end %>
  <% end %>
<% end %>
