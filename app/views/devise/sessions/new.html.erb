<% content_for(:html_title) { '| ' + t('.sign_in') } %>
<% content_for(:heading, t('.sign_in')) -%>

<%= form_with(model: resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
  <%= f.email_field :email, autofocus: true, autocomplete: 'email' %>
  <%= password_toggle_field f, :password, autocomplete: 'current-password' %>

  <% if devise_mapping.rememberable? %>
    <%= f.check_box :remember_me %>
  <% end %>

  <div class="actions">
    <%= f.submit t('.sign_in'), class: "button button--primary button--full-width" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>