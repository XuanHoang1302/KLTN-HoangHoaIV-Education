<% if file.present? %>
<div class="file-input__file-list">
  <ul>
    <li id="<%= dom_id(file) %>" class="uploaded">
      <%= link_to rails_blob_path(file, disposition: :attachment), class: "file-input__uploaded-file" do %>
        <span><%= file.filename %></span>
        <%= render(IconComponent.new(name: :download)) %>
      <% end %>

      <%= form_section.fields_for :signed_ids do |signed_ids_section| %>
        <%= signed_ids_section.hidden_field "", id: nil, value: file.signed_id %>
      <% end %>

      <% unless readonly %>
        <%= link_to "javascript:;", class: 'file-input__uploaded-file delete-file', data: { confirm: t('are_you_sure'), action: "confirm:success->file-input#delete" } do %>
          <%= render(IconComponent.new(name: :x)) %>
        <% end %>
      <% end %>
    </li>
  </ul>
</div>
<% end %>
